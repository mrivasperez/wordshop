<div class="d-flex justify-content-between align-items-center">
    <h1><%= @article.title %></h1>
    <div class="btn-group">
        <%= link_to "Edit", edit_article_path(@article), class: "btn btn-secondary" %>
        <%= link_to "Delete", article_path(@article), class: "btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure that you want to delete this article?" } %>
    </div>
</div>



<p><strong>Description:</strong> <%= @article.description %></p>