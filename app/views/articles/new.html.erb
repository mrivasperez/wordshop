<div class="d-flex justify-content-between align-items-center">
  <h1>New Article</h1>
  <%= link_to "Cancel", articles_path, :class => "btn btn-secondary" %>
</div>

<% if @article.errors.any? %>
    <h2>Error</h2>
    <p>The article was not saved due to the following error(s).</p>
    <ul>
        <% @article.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<%= form_with scope: :article, url: articles_path, local: true do |f| %>
    <p> 
      <%= f.label :title, class: "form-label" %><br/> 
      <%= f.text_field :title, class: "form-control" %>
    </p>
    <p>
      <%= f.label :description, class: "form-label" %><br/> 
      <%= f.text_area :description, class: "form-control" %> 
    </p>
    <p>
      <%= f.submit "Publish", :class => "btn btn-primary" %> 
    </p>
  <% end %>