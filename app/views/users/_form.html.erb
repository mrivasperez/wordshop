<% if @user.errors.any? %>
    <div class="alert alert-warning my-4" role="alert">
    <h4 class="alert-heading">Error</h4>
    <p>The folllowing error(s) occured while signing up.</p>
    <ul>
        <% @user.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
        <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @user, local: true) do |f| %>
    <p> 
      <%= f.label :username, class: "form-label" %>
      <%= f.text_field :username, class: "form-control", placeholder: "Enter a username" %>
    </p>
    <p>
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, class: "form-control", placeholder: "Enter your email address" %>
    </p>
    <p>
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, class: "form-control", placeholder: "Enter a password" %>
    </p>
    <p>
      <%= f.submit(@user.new_record? ? "Sign Up" : "Update Account", :class => "btn btn-primary") %> 
    </p>
  <% end %>