<h1>Users</h1>

<% @users.each do |user| %>
    <div class="card my-4">
        <div class="card-body">
            <h5 class="card-title"><%= user.username %></h5>
            <h6 class="card-subtitle"><%= pluralize(user.articles.count, "Article") %></h6>
            <div class="mt-3">
                <%= link_to "View Profile", user, class: "btn btn-primary" %>
                <%= link_to "Edit Profile", edit_user_path(user), class: "btn btn-outline-primary" %>
            
            </div>
            
        </div>
        <div class="card-footer">
            <small>Joined <%= time_ago_in_words(user.created_at) %> ago</small>
        </div>
    </div>
<% end %>